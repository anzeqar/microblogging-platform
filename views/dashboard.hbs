<h1 class="mb-4 mt-4 text-center">Dashboard</h1>

<h3 class="mb-2">Welcome, <span class="text-warning">{{name}}</span></h3>
<br />

{{#if posts}}
  <table
    class="table table-dark table-hover table-striped border-warning rounded"
  >
    <thead class="text-center">
      <tr>
        <th scope="col">Post</th>
        <th scope="col">Date</th>
        <th scope="col">Status</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each posts}}
        <tr class="text-center">

          <td><a
              href="/posts/{{_id}}"
              class="h6 text-info text-decoration-none"
              style="line-height: 1.8rem;"
            >{{title}}</a></td>
          <td><span class="h6" style="line-height: 1.8rem;">
              {{formatDate createdAt "DD-MM-YYYY @ hh:mm:ss A"}}
            </span></td>
          <td><span class="h6" style="line-height: 1.8rem;">{{upperCase
                status
              }}</span>

          </td>
          <td>
            <div class="d-flex flex-row justify-content-evenly">
              <a href="/posts/edit/{{_id}}" class="text-success" class="h6"><i
                  class="fas fa-pen"
                  style="line-height: 1.8rem;"
                ></i></a>
              <form action="/posts/{{_id}}" class="m-0 ms-1" method="POST">
                <input type="hidden" name="_method" value="DELETE" />
                <button
                  type="submit"
                  class="btn p-0 text-danger"
                  class="h6"
                  style="line-height: 1.8rem;"
                ><i
                    class="fas fa-trash"
                    style="line-height: 1.8rem;"
                  ></i></button>
              </form>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No Posts created, Add One</p>
{{/if}}